{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-console": "off",
    "no-multiple-empty-lines": ["error", {"max": 1, "maxEOF": 0}],
    "nonblock-statement-body-position": ["error", "below"],
    "semi": ["error", "never"]
  }
}
